<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <!-- 自定义的dialog样式-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>     <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>         <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/sc_transparent_background
        </item>  <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true
        </item>                          <!-- 设置屏幕变暗 -->
    </style>
</resources>
